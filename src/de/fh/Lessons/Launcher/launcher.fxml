                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Button scaleX="1.5" scaleY="1.5" text="Blatt 1" GridPane.halignment="CENTER" fx:id="btn1" />
                <Button scaleX="1.5" scaleY="1.5" text="Blatt 2" GridPane.columnIndex="1" GridPane.halignment="CENTER" fx:id="btn2" />
                <Button scaleX="1.5" scaleY="1.5" text="Blatt 3" GridPane.halignment="CENTER" GridPane.rowIndex="1" fx:id="btn3" />
                <Button scaleX="1.5" scaleY="1.5" text="Blatt 4" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" fx:id="btn4" />
                <Button scaleX="1.5" scaleY="1.5" text="Blatt 5" GridPane.halignment="CENTER" GridPane.rowIndex="2" fx:id="btn5"/>
