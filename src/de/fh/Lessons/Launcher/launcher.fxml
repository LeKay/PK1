<AnchorPane prefHeight="450.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.fh.Lessons.Launcher.LauncherController">
    <children>
        <Pane prefHeight="100.0" prefWidth="600.0">
             <children>
                <Label layoutX="15.0" layoutY="30.0" text="Willkommen zur Programmierpraktikums Application 1!">
                    <font>
                    <Font size="19.0" />
                </font>
                </Label>
                <Label layoutX="15.0" layoutY="60.0" text="Bitte wählen Sie das Übungsblatt für die entsprechende Ausgabe:" textAlignment="CENTER">
