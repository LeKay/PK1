                <Button scaleX="1.5" scaleY="1.5" text="Blatt 7" GridPane.halignment="CENTER" GridPane.rowIndex="3" fx:id="btn7"/>
                <Button scaleX="1.5" scaleY="1.5" text="Blatt 8" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3" fx:id="btn8"/>
            </children>
        </GridPane>
   </children>
